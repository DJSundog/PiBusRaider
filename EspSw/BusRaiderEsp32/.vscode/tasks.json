{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildBusRaiderESP32",
            "type": "shell",
            "command": "platformio",
            "args": [
                "run"
            ],
            "problemMatcher": [
                "$platformio"
            ]
        },
        {
            "label": "Build + Upload to BusRaider",
            "type": "shell",
            "command": "curl",
            "args": [
                "-F data=@./.pio/build/featheresp32/firmware.bin",
                "http://192.168.43.186/espFirmwareUpdate"
            ],
            "dependsOn": [
                "BuildBusRaiderESP32"
            ],
            "problemMatcher": [
                "$platformio"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}